﻿@{
	ViewData["Title"] = "Index";
}
@model List<BookViewModel>
<div class="container-fluid">
	<div class="container">
		<div class="d-flex justify-content-end">  @Html.ActionLink("Add", "Create", "Books", null, new { @class = "btn btn-primary" })</div>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Categories</th>
					<th scope="col">Author</th>
					<th scope="col">Publisher</th>
				</tr>
			</thead>
			<tbody>

				@if (ViewBag.HasData)
				{
					foreach (var item in Model)
					{
						<tr>
							<th scope="row">@item.Id</th>
							<td>@item.Name</td>
							<td>
								@foreach (var category in item.Categories)
								{
									<span>@category.Name</span>
								}

							</td>
							<td> @item.AuthorFullName</td>
							<td> @item.PublisherName
							<td>

								<a class="btn btn-warning" asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id">
									<i class="far fa-pen-to-square"></i>

								</a>
								<a class="btn btn-danger" asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id">
									<i class="fas fa-trash-can"></i>
								</a>

							</td>
						</tr>
					}
					<h3 class="text-success">@TempData["Success"]</h3>
					<h3 class="text-danger">@TempData["Delete"]</h3>
				}
				else
				{

					<h1>@ViewData["Message"]</h1>

				}


			</tbody>
		</table>


	</div>
</div>
